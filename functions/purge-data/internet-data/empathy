#!/bin/bash

function empathy {
 show_info 'Removing unused pre-installed applications...'
 show_warning 'Requires root privileges'
 sudo apt-get purge -y empathy empathy-common empathy-dbg empathy-skype nautilus-sendto-empathy
 # Done
 show_success 'Done.'
 whiptail --title "Finished" --msgbox "Removal complete." 8 78
 cleanup
}
