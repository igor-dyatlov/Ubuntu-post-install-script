# Kernel system upgrade
function v4.6-stable {
	eval `resize`
	KERNEL46S=$(whiptail \
		--notags \
		--title 'Update system kernel' \
		--menu '\nWhat would you like to do?' \
		--ok-button 'Update' \
		--cancel-button 'Go Back' \
	$LINES $COLUMNS $(( $LINES - 12 )) \
		v4.6.4 'Update stable (v4.6.4) kernel (need reboot)' \
		v4.6.5 'Update stable (v4.6.5) kernel (need reboot)' \
	3>&1 1>&2 2>&3)

exitstatus=$?
	if [ $exitstatus = 0 ]; then
		clear && $KERNEL46S
	else
		clear && main
	fi
}
