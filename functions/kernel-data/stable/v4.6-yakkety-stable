# Kernel system upgrade
function v4.6-yakkety-stable {
	eval `resize`
	KERNEL46Y=$(whiptail \
		--notags \
		--title 'Update system kernel' \
		--menu '\nWhat would you like to do?' \
		--ok-button 'Update' \
		--cancel-button 'Go Back' \
	$LINES $COLUMNS $(( $LINES - 12 )) \
		v4.6 'Update stable (v4.6-yakkety) kernel (need reboot)' \
		v4.6.1 'Update stable (v4.6.1-yakkety) kernel (need reboot)' \
		v4.6.2 'Update stable (v4.6.2-yakkety) kernel (need reboot)' \
		v4.6.3 'Update stable (v4.6.3-yakkety) kernel (need reboot)' \
	3>&1 1>&2 2>&3)

exitstatus=$?
	if [ $exitstatus = 0 ]; then
		clear && $KERNEL46Y
	else
		clear && main
	fi
}
