# Kernel system upgrade
function v4.7-stable {
	eval `resize`
	KERNEL47=$(whiptail \
		--notags \
		--title 'Update system kernel' \
		--menu '\nWhat would you like to do?' \
		--ok-button 'Update' \
		--cancel-button 'Go Back' \
	$LINES $COLUMNS $(( $LINES - 12 )) \
		v4.7 'Update stable (v4.7) kernel (need reboot)' \
		v4.7.1 'Update stable (v4.7.1) kernel (need reboot)' \
		v4.7.2 'Update stable (v4.7.2) kernel (need reboot)' \
		v4.7.3 'Update stable (v4.7.3) kernel (need reboot)' \
		v4.7.4 'Update stable (v4.7.4) kernel (need reboot)' \
		v4.7.5 'Update stable (v4.7.5) kernel (need reboot)' \
	3>&1 1>&2 2>&3)

exitstatus=$?
	if [ $exitstatus = 0 ]; then
		clear && $KERNEL47
	else
		clear && main
	fi
}
