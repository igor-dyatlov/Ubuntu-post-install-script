	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.6-rc7-yakkety/linux-headers-4.6.0-040600rc7_4.6.0-040600rc7.201605120803_all.deb
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.6-rc7-yakkety/linux-image-4.6.0-040600rc7-generic_4.6.0-040600rc7.201605120803_amd64.deb
