else
  clear && main
fi
}

# Kernel system upgrade
function v4.6-yakkety-unstable {
    eval `resize`
    KERNEL44=$(whiptail \
        --notags \
        --title "Update system kernel" \
        --menu "\nWhat would you like to do?" \
        --ok-button "Update" \
        --cancel-button "Go Back" \
        $LINES $COLUMNS $(( $LINES - 12 )) \
				v4.6-rc6        'Update unstable (v4.6-rc6-yakkety) kernel (need reboot)' \
				v4.6-rc7        'Update unstable (v4.6-rc7-yakkety) kernel (need reboot)' \
        3>&1 1>&2 2>&3)

    exitstatus=$?
    if [ $exitstatus = 0 ]; then
        clear && $KERNEL44
    else
        clear && main
    fi
}
