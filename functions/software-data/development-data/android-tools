#!/bin/bash

# Android tools
function android-tools {
	# Update repository information
	show_info 'Updating repository information...'
	show_warning 'Requires root privileges'
	sudo apt-get update
	# Install
  show_info 'Installing Android tools...'
  show_warning 'Requires root privileges'
  sudo apt-get install -y android-tools-adb android-tools-fastboot android-tools-fsutils
  # Done
  show_success 'Done.'
  whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
